<p id="notice"><%= notice %></p>

<h1>Listing Registered Applications</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @events.present? %>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.name %></td>
          <td><%= link_to 'Show', registered_application_events_path %></td>
          <td><%#= link_to 'Edit', edit_event_path(event) %></td>
          <td><%#= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>

  </tbody>
</table>

<br>

